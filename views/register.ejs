<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] bg-white px-10 py-10 rounded-[30px]">
      <h1 class="text-3xl capitalize tracking-tighter leading-none text-center font-semibold text-zinc-700 mt-2 mb-2">Create New Account</h1>
      <h3 class="leading-none flex mb-10 items-center justify-center">Find new ideas to try</h3>
      <form action="/register" method="post">
        <label for="email"></label>
        <input class="border-2 block w-full mt-2 px-3 py-2 rounded-md" type="text" name="fullname" placeholder="fullname">
        <input class="border-2 block w-full mt-2 px-3 py-2 rounded-md" type="text" name="username" placeholder="username">
        <input class="border-2 block w-full mt-2 px-3 py-2 rounded-md" type="email" name="email" placeholder="email">
        <input class="border-2 block w-full mt-2 px-3 py-2 rounded-md" type="number" name="contact" placeholder="contact">
        <input class="border-2 block w-full mt-2 px-3 py-2 rounded-md" type="password" name="password" placeholder="password">
        <input class="border-2 block w-full mt-5 px-3 py-2 rounded-full text-white bg-red-600" type="submit" value="Create Account"> 
        <p class="text-xs font-semibold text-zinc-600 mt-4 mx-auto w-3/4 text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
      </form>
      <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Have an account? SignIn</a>
    </div>
  </div>
  
<% include ./partials/footer.ejs %>